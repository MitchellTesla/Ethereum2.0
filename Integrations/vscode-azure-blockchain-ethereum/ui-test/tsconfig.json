{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES6",
        "outDir": "out",
        "sourceMap": true,
        "strict": true,
        "rootDir": "src",
        "allowJs": true
    },
    "include": [
        "src/**/*.js",
        "src/**/*.ts",
        "src/**/*.json"
    ],
    "exclude": [
        "node_modules",
        "vscode-test",
        "test-resources"
    ]
}